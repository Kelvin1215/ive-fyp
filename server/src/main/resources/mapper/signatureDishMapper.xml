<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.server.mapper.SignatureDishMapper">
    <select id="getSignatureDish" resultType="com.server.model.SignatureDish">
        SELECT * FROM signature_dish
        <where> 1=1 
            <if test="name_zh_HK != null &amp;&amp; name_zh_HK != ''">
                AND Name_zh_HK = #{name_zh_HK}
            </if>
            <if test="name_en_US != null &amp;&amp; name_en_US != ''">
                AND Name_en_US = #{name_en_US}
            </if>
            <if test="name_zh_CN != null &amp;&amp; name_zh_CN != ''">
                AND Name_zh_CN = #{name_zh_CN}
            </if>
            <if test="price != null &amp;&amp; price != ''">
                AND price = #{price}
            </if>
            <if test="onSale != null &amp;&amp; onSale != ''">
                AND onSale = #{onSale}
            </if>
        </where>
    </select>
</mapper>